<view class="{{hasLine?'scale-1px':''}}">
  <view a:if="{{tagsList.length>0}}" class="edit-tags-box" style="{{hasGap?'padding: 20rpx 0;':''}}">
    <view a:for="{{tagsList}}" onTap="onClick" data-index="{{index}}" class="edit-tag" a:key="*this">
      <slot>
        <view class="edit-tag-text huanhang">{{item[textFeild]}}</view>
      </slot>
      <view onTap="toDel" data-index="{{index}}" class="close-icon-border" a:if="{{!disabled}}">
        <am-icon type="close"></am-icon>
      </view>
    </view>
  </view>
  <view a:else class="edit-tags-tips" style="{{hasGap?'padding: 20rpx 0;':''}}">{{tips}}</view>
</view>